@using OnlineTicket.Web.Models.Students
@using OnlineTicket.Students.Dto
@using OnlineTicket.Web.Models.Common.Modals
@model StudentDtoOutput
@{ Layout = null; }
@await Html.PartialAsync("~/Views/Shared/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel("EditStudent"))
<form name="StudentEditForm" role="form" class="form-horizontal">
    <input type="hidden" name="Id" value="@Model.Id" />
    <div class="modal-body">
        <div class="form-group row required">

            @*For Null Values*@

            @Html.HiddenFor(m => m.CreatorUserId, new { Value = "1" })
            @Html.HiddenFor(m => m.CreationTime, new { Value = "2022-01-20 16:42:41.8938164" })
            @Html.HiddenFor(m => m.LastModifierUserId, new { Value = "1" })
            @Html.HiddenFor(m => m.LastModificationTime, new { Value = "2022-01-20 16:42:41.8938164" })



            @*New Data to be fetched/edited*@

            <label class="col-md-3 col-form-label" for="FullName">FullName</label>
            <div class="col-md-9">
                <input id="FullName" class="form-control" type="text" name="FullName" value="@Model.FullName" required maxlength="32" minlength="2">
            </div>
        </div>
        <div class="form-group row required">
            <label class="col-md-3 col-form-label" for="RegistrationNumber">RegistrationNumber</label>
            <div class="col-md-9">
                <input id="RegistrationNumber" type="text" class="form-control" name="RegistrationNumber" value="@Model.RegistrationNumber" required maxlength="32" minlength="2">
            </div>
        </div>
        <div class="form-group row">
            <label class="col-md-3 col-form-label" for="EmailId">EmailId</label>
            <div class="col-md-9">
                <textarea id="EmailId" class="form-control" name="EmailId">@Model.EmailId</textarea>
            </div>
        </div>
    </div>
    @await Html.PartialAsync("~/Views/Shared/Modals/_ModalFooterWithSaveAndCancel.cshtml")
</form>

<script src="~/view-resources/Views/Students/_editModal.js" asp-append-version="true"></script>
