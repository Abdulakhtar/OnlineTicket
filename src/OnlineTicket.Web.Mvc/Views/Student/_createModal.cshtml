@using OnlineTicket.Web.Models.Common.Modals
@model OnlineTicket.Web.Models.Students.StudentViewModel
@{ Layout = null; }
<div class="modal fade" id="StudentCreateModal" tabindex="-1" role="dialog" aria-labelledby="StudentCreateModalLabel" data-backdrop="static">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            @await Html.PartialAsync("~/Views/Shared/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel("CreateNewStudent"))
            <form name="studentCreateForm" role="form" class="form-horizontal" autocomplete="off">
                <div class="modal-body">
                    <div class="form-group row required">
                        <label class="col-md-3 col-form-label" for="FullName">@L("FullName")</label>
                        <div class="col-md-9">
                            <input id="FullName" type="text" name="FullName" class="form-control" required maxlength="32" minlength="2">
                        </div>
                    </div>
                    <div class="form-group row required">
                        <label class="col-md-3 col-form-label" for="RegistrationNumber">@L("RegistrationNumber")</label>
                        <div class="col-md-9">
                            <input id="RegistrationNumber" type="text" name="RegistrationNumber" class="form-control" required maxlength="32" minlength="2">
                        </div>
                    </div>
                    <div class="form-group row required">
                        <label class="col-md-3 col-form-label" for="ObtainedMarks">@L("ObtainedMarks")</label>
                        <div class="col-md-9">
                            <input id="ObtainedMarks" type="text" name="ObtainedMarks" class="form-control">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-md-3 col-form-label" for="EmailId">@L("EmailId")</label>
                        <div class="col-md-9">
                            <input type="text" id="EmailId" name="EmailId" class="form-control" />
                        </div>
                    </div>
                </div>
                @await Html.PartialAsync("~/Views/Shared/Modals/_ModalFooterWithSaveAndCancel.cshtml")
            </form>
        </div>
    </div>
</div>
